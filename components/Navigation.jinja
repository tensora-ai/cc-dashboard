{#def title, project, key, date #}

<nav>
    <ul>
        <li>
            <img src="/static/tensora_icon.svg" width="36" />
        </li>
        <li>
            <h3 style="margin-bottom: 0">{{ title }}</h3>
        </li>
    </ul>
    <ul>
        <li><input style="display: none" type="text" name="id" value="{{ project }}"></li>
        <li><input style="display: none" type="text" name="key" value="{{ key }}"></li>
        <li>
            <input id="timepicker" type="time" name="time" aria-label="Time" value="" hx-trigger="change"
                hx-get="/content" hx-target="#main"
                hx-include="[name='id'], [name='key'], [name='date'], [name='time']" />
        </li>
        <li>
            <input id="datepicker" type="date" name="date" aria-label="Date" value="{{ date }}" hx-trigger="change"
                hx-get="/content" hx-target="#main"
                hx-include="[name='id'], [name='key'], [name='date'], [name='time']" />
        </li>
        <li>
            <button aria-busy="true">
                Live
            </button>
        </li>
    </ul>
</nav>